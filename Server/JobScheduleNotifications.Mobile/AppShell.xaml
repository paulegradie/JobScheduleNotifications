<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JobScheduleNotifications.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:JobScheduleNotifications.Mobile.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Login is your “root” route -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Dashboard for authenticated users -->
    <ShellContent
        Title="Dashboard"
        Route="DashboardPage"
        ContentTemplate="{DataTemplate views:DashboardPage}" />

    <!-- Other pages you’ll navigate to -->
    <ShellContent
        Title="Customers"
        Route="CustomersPage"
        ContentTemplate="{DataTemplate views:CustomersPage}" />

    <ShellContent
        Title="Schedule Job"
        Route="ScheduleJobPage"
        ContentTemplate="{DataTemplate views:ScheduleJobPage}" />

</Shell>