<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pageModels="using:Mobile.PageModels"
             x:Class="Mobile.Pages.MainPage">

    <ContentPage.BindingContext>
        <pageModels:MainPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="30"
          BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0"
                             Spacing="10"
                             Margin="0,40,0,20">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="Welcome!"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light=#1C1C1E, Dark=White}" />

            <Label
                Text="Please login or create an account to continue"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light=#666666, Dark=#8E8E93}" />
        </VerticalStackLayout>

        <!-- Buttons -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="20"
                             VerticalOptions="Center">

            <!-- Login Button -->
            <Button
                Text="Sign In"
                Command="{Binding NavigateToLoginCommand}"
                BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                TextColor="White"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="10"
                HorizontalOptions="Fill" />

            <!-- Register Button -->
            <Button
                Text="Create Account"
                Command="{Binding NavigateToRegisterCommand}"
                BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}"
                TextColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="10"
                BorderColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                BorderWidth="1"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>

        <!-- Footer -->
        <Label Grid.Row="2"
               Text="© 2023 Your App Name"
               TextColor="{AppThemeBinding Light=#666666, Dark=#8E8E93}"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />
    </Grid>

</ContentPage>