<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:viewModels="clr-namespace:Mobile.PageModels"
             xmlns:converters="clr-namespace:Mobile.Converters"
             x:Class="Mobile.Pages.ScheduleJobPage"
             x:DataType="viewModels:ScheduleJobViewModel"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <Grid Padding="20">
            <!-- Customer Picker -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                <Label Text="Select Customer"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Picker ItemsSource="{Binding Customers}"
                        ItemDisplayBinding="{Binding FullName}"
                        SelectedItem="{Binding SelectedCustomer}"
                        Title="Select a customer"/>
            </VerticalStackLayout>

            <!-- Date Picker -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                <Label Text="Select Date"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <DatePicker Date="{Binding ScheduledDate}"
                           MinimumDate="{Binding Source={x:Static system:DateTime.Today}}"/>
            </VerticalStackLayout>

            <!-- Time Picker -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                <Label Text="Select Time"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <TimePicker Time="{Binding ScheduledTime}"/>
            </VerticalStackLayout>

            <!-- Job Description -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                <Label Text="Job Description"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Editor Text="{Binding JobDescription}"
                        Placeholder="Enter job description"
                        AutoSize="TextChanges"
                        HeightRequest="100"/>
            </VerticalStackLayout>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                   HorizontalOptions="Center"/>

            <!-- Schedule Button -->
            <Button Text="Schedule Job"
                    Command="{Binding ScheduleJobCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50"
                    CornerRadius="10"
                    Margin="0,20,0,0"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
        </Grid>
    </ScrollView>
</ContentPage> 