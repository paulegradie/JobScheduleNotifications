<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary brand colors -->
    <Color x:Key="Primary100">#E3F2FD</Color>
    <Color x:Key="Primary500">#2196F3</Color>
    <Color x:Key="Primary700">#1565C0</Color>

    <!-- Accent -->
    <Color x:Key="Accent100">#FFECB3</Color>
    <Color x:Key="Accent500">#FFC107</Color>
    <Color x:Key="Accent700">#FFA000</Color>

    <!-- Neutral / background -->
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="Surface">#F5F5F5</Color>
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>

    <!-- Semantic -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FB8C00</Color>
    <Color x:Key="Error">#E53935</Color>


    <!-- Icon tints -->
    <Color x:Key="IconLight">#2196F3</Color>  <!-- e.g. your Primary500 color -->
    <Color x:Key="IconDark">#1565C0</Color>   <!-- optional for dark theme -->

    <!-- If you prefer brushes instead of raw Color -->
    <SolidColorBrush x:Key="IconLightBrush" Color="{StaticResource IconLight}" />
    <SolidColorBrush x:Key="IconDarkBrush" Color="{StaticResource IconDark}" />
</ResourceDictionary>