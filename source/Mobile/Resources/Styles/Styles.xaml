<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent500}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />

    <!-- Implicit Label style -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Heading style -->
    <Style x:Key="HeadingLabel" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Implicit Button style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <!-- SearchBar style -->
    <Style TargetType="SearchBar">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- CollectionView separator -->
    <Style TargetType="CollectionView">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

    <!-- ActivityIndicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource PrimaryBrush}" />
    </Style>

    
    <!-- <ImageSource x:Key="IconDashboard" So="dashboard.png" /> -->
    <!-- <ImageSource x:Key="IconDashboard">dashboard.png</ImageSource> -->
    <FileImageSource
        x:Key="IconDashboard"
        File="dashboard.png" />
</ResourceDictionary>